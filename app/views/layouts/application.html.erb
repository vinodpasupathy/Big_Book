<script type="text/javascript">
 function validat()

 { var chks = document.getElementsByName('is[]');

 var checkCount = 0;

 for (var i = 0; i < chks.length; i++)

 { if (chks[i].checked)

 { checkCount++; } }

 if (checkCount == 0)

 { alert("Please select atleast one option");

 return false; }
 else { return true; } }

